<style>
  .footer {
    background: #01402E;
    padding: 40px 20px 20px;
    color: #ccd0d4;
    border-top: 1px solid rgba(255,255,255,0.08);
  }

  .footer a { transition: color .2s ease, background .2s ease, opacity .2s ease; }
  .footer a:focus-visible { outline: 2px solid #4cf2d6; outline-offset: 2px; border-radius: 6px; }

  .footer-grid {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }
  @media (max-width: 900px) {
    .footer-grid { grid-template-columns: 1fr; }
  }

  .col h4 { margin: 0 0 10px; color: #4cf2d6; font-size: 16px; }
  .col + .col { border-left: 1px solid rgba(255,255,255,0.08); padding-left: 16px; }
  @media (max-width: 900px) { .col + .col { border: none; padding-left: 0; } }

  /* Publicidad */
  .ad-box {
    height: 160px;
    border: 1px dashed rgba(255,255,255,0.5);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,0.15);
    color: #e8ecef;
    font-weight: 700;
  }

  /* Menú */
  .footer-menu { list-style: none; padding: 0; margin: 0 0 12px; display: grid; gap: 6px; }
  .footer-menu a { color: #e8ecef; text-decoration: none; font-size: 14px; }
  .footer-menu a:hover { text-decoration: underline; }

  /* Redes */
  .social { display: flex; gap: 10px; flex-wrap: wrap; }
  .social-link { display: inline-flex; align-items: center; gap: 8px; color: #0c0f12; background: #4cf2d6; padding: 6px 10px; border-radius: 999px; font-weight: 700; text-decoration: none; font-size: 13px; }
  .social-link:hover { background: #36bba5; }

  /* Enlaces con imágenes */
  .enlaces { display: grid; gap: 10px; }
  .enlace-card { display: flex; align-items: center; gap: 10px; text-decoration: none; color: #e8ecef; background: rgba(0,0,0,0.15); border: 1px solid rgba(255,255,255,0.12); border-radius: 10px; padding: 8px; box-shadow: 0 0 0 rgba(0,0,0,0); }
  .enlace-card img { width: 64px; height: 44px; object-fit: cover; border-radius: 6px; }
  .enlace-card:hover { background: rgba(0,0,0,0.25); }
  .enlace-card:focus-visible { outline: 2px solid #4cf2d6; outline-offset: 2px; }

  .copy { margin-top: 18px; text-align: center; font-size: 14px; opacity: 0.8; }
</style>
