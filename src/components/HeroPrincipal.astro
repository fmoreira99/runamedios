<style>
  /* Carrusel con efecto glow (9:16) */
  .carousel { 
    width: 360px; 
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  @media (max-width: 900px) { .carousel { width: 260px; } }

  /* EFECTO GLOW ANIMADO - Debe ir en el carousel, no en slides */
  .carousel::before {
    content: "";
    position: absolute;
    top: 30px;
    left: 50%;
    transform: translateX(-50%) scale(0.8);
    z-index: -1;
    height: 100%;
    width: 100%;
    filter: blur(10px);
    -webkit-filter: blur(100px);
    background: linear-gradient(270deg, #01402E, #038239);
    background-size: 200% 200%;
    animation: animateGlow 10s ease infinite;
    border-radius: 12px;
  }

  @keyframes animateGlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  .slides { 
    position: relative; 
    aspect-ratio: 9 / 16; 
    border-radius: 12px; 
    overflow: hidden; 
    background: #0c0f12; 
    border: 1px solid rgba(255,255,255,0.06);
  }

  /* Mostrar/ocultar cada slide por wrapper */
  .slide-wrapper { 
    position: absolute; 
    inset: 0; 
    width: 100%; 
    height: 100%; 
    opacity: 0; 
    transition: opacity .35s ease; 
  }
  .slide-wrapper.active { opacity: 1; }

  .slide { 
    position: absolute; 
    inset: 0; 
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
  }
  
  .dots { 
    display: flex; 
    gap: 8px; 
    justify-content: center; 
    margin-top: 10px; 
  }
  .dot { 
    width: 8px; 
    height: 8px; 
    border-radius: 999px; 
    border: none; 
    background: #2a3b46; 
    cursor: pointer; 
    padding: 0; 
  }
  .dot.active { background: #4cf2d6; }

  /* Overlay con título y descripción */
  .slide-overlay {
    position: absolute;
    inset: auto 0 0 0;
    padding: 12px 14px;
    background: linear-gradient(180deg, rgba(12,15,18,0) 0%, rgba(12,15,18,0.75) 40%, rgba(12,15,18,0.95) 100%);
    color: #e8ecef;
  }
  .slide-tag {
    display: inline-block;
    font-size: 11px;
    font-weight: 700;
    text-transform: lowercase;
    color: #0c0f12;
    background: #4cf2d6;
    border-radius: 999px;
    padding: 4px 10px;
    margin-bottom: 6px;
  }
  .slide-title { margin: 6px 0 4px; font-size: 16px; font-weight: 700; }
  .slide-desc { margin: 0; font-size: 13px; opacity: 0.85; }
</style>

<script is:inline>
  function initCarousels() {
    const carousels = document.querySelectorAll('.carousel');
    carousels.forEach((carousel) => {
      const slides = Array.from(carousel.querySelectorAll('.slide'));
      const wrappers = Array.from(carousel.querySelectorAll('.slide-wrapper'));
      const dots = Array.from(carousel.querySelectorAll('.dot'));
      let i = wrappers.findIndex((w) => w.classList.contains('active'));
      if (i < 0) i = 0;

      const show = (n) => {
        wrappers.forEach((w, idx) => w.classList.toggle('active', idx === n));
        dots.forEach((d, idx) => d.classList.toggle('active', idx === n));
        i = n;
      };

      let timer = null;
      const start = () => (timer = setInterval(() => show((i + 1) % wrappers.length), 4000));
      const stop = () => { if (timer) { clearInterval(timer); timer = null; } };

      dots.forEach((d, idx) => d.addEventListener('click', () => { stop(); show(idx); start(); }));

      show(i);
      start();
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCarousels);
  } else {
    initCarousels();
  }
</script>
