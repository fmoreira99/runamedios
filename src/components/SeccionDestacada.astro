---
import { getCollection } from "astro:content";
const noticias = await getCollection("noticias");
---

<section class="destacadas" id="destacadas">
  <div class="lado-izq">
    <h2 class="slide-in" style="--delay: 0s;">RunaMedia</h2>
    <p class="slide-in" style="--delay: 0.08s;">Noticias diarias sobre tecnología, negocios y actualidad.</p>

    <form class="suscripcion slide-in" style="--delay: 0.16s;">
      <input type="email" placeholder="Tu correo" />
      <button>Suscribirme</button>
    </form>

    <div class="ads slide-in" style="--delay: 0.24s;"><p>Publicidad</p></div>
  </div>

  <div class="lado-der">
    {noticias.slice(-3).reverse().map((post, idx) => (
      <a class="card slide-in" style={`--delay: ${idx * 0.1}s`} href={`/noticias/${post.slug}`}>
        <img src={post.data.img} alt={post.data.title} />
        <div class="texto">
          <h3>{post.data.title}</h3>
          <span>{post.data.date}</span>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .destacadas {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 40px;
    padding: 60px 40px;
    max-width: 1400px;
    margin: auto;
  }

  .lado-izq h2 {
    font-size: 36px;
    font-weight: 800;
    color: #4cf2d6;
    margin-bottom: 12px;
  }

  .lado-izq p {
    font-size: 16px;
    margin-bottom: 20px;
    color: #ccd0d4;
  }

  .suscripcion {
    display: flex;
    gap: 10px;
    margin-bottom: 30px;
  }

  .suscripcion input {
    flex: 1;
    padding: 10px;
    border-radius: 6px;
    border: none;
  }

  .suscripcion button {
    padding: 10px 18px;
    background: #01402E;

    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    color: #0c0f12;
  }

  .ads {
    margin-top: 40px;
    background: #0C0F12;
    border: 1px dashed #4cf2d6;
    border-radius: 6px;
    height: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.6;
  }

  .lado-der {
    display: grid;
    gap: 20px;
  }

  .card {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: 16px;
    background: #0C0F12;
    border-radius: 8px;
    padding: 12px;
    text-decoration: none;
    color: #ccd0d4;
    transition: 0.2s;
  }

  .card:hover {
    background: #162029;
  }

  .card img {
    width: 100%;
    height: 120px;
    object-fit: cover;
    border-radius: 6px;
  }

  .texto h3 {
    margin: 0 0 6px 0;
    font-size: 18px;
  }

  .texto span {
    font-size: 14px;
    opacity: 0.6;
  }

  /* Animación entrada derecha->izquierda con 'stagger' por --delay */
  @keyframes slideInRight {
    from { opacity: 0; transform: translateX(30px); }
    to { opacity: 1; transform: translateX(0); }
  }
  .slide-in {
    opacity: 0;
    will-change: transform, opacity;
    animation: slideInRight 0.6s ease-out forwards;
    animation-delay: var(--delay, 0s);
  }
</style>
