---
import { getCollection } from "astro:content";
const noticias = await getCollection("noticias");
---

<section class="destacadas" id="destacadas">
  <div class="lado-izq">
    <div style="width: 500px; height: 200px; border-radius: 25px;">
      <div class="glow-frame">
        <img
          class="glow-image"
          style="width: 100%; height: 100%; object-fit: cover; border-radius: 5px;"
          src="https://res.cloudinary.com/durxpegdm/image/upload/v1762637631/logos/ChatGPT_Image_8_nov_2025_16_33_43_nb8cnb.png"
          alt=""
        />
      </div>
      <h2 class="slide-in " style="--delay: 0s; color:#ffffff ;">Enterate de todo con
         <div style="background: #01402e;padding:5px; width: 100px; border-radius: 10px;">RunaMedia</div>
      </h2>
      <p class="slide-in" style="--delay: 0.08s;">
        Noticias diarias sobre tecnología, chismes y mas. Navega entre nuestras publicaciones y conoce que pasa en el mundo.
      </p>
      <script type="text/javascript">
        atOptions = {
          key: "35e985a5b4f4a38f982c6df2076419fc",
          format: "iframe",
          height: 50,
          width: 320,
          params: {},
        };
      </script>
      <script
        type="text/javascript"
        src="//www.highperformanceformat.com/35e985a5b4f4a38f982c6df2076419fc/invoke.js"
      ></script>
    </div>
  </div>

  <div class="lado-der">
    {
      noticias
        .slice(-3)
        .reverse()
        .map((post, idx) => (
          <a
            class="card slide-in"
            style={`--delay: ${idx * 0.1}s`}
            href={`/noticias/${post.slug}`}
          >
            <img src={post.data.img} alt={post.data.title} />
            <div class="texto">
              <h3>{post.data.title}</h3>
              <span>{post.data.date}</span>
            </div>
          </a>
        ))
    }
  </div>
</section>

<style>
  .destacadas {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 40px;
    padding: 60px 40px;
    max-width: 1400px;
    margin: auto;
  }

  .lado-izq h2 {
    font-size: 36px;
    font-weight: 800;
    color: #4cf2d6;
    margin-bottom: 12px;
  }

  .lado-izq p {
    font-size: 16px;
    margin-bottom: 20px;
    color: #ccd0d4;
  }

  .suscripcion {
    display: flex;
    gap: 10px;
    margin-bottom: 30px;
  }

  .suscripcion input {
    flex: 1;
    padding: 10px;
    border-radius: 6px;
    border: none;
  }

  .suscripcion button {
    padding: 10px 18px;
    background: #01402e;

    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    color: #0c0f12;
  }

  .ads {
    margin-top: 40px;
    background: #0c0f12;
    border: 1px dashed #4cf2d6;
    border-radius: 6px;
    height: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.6;
  }

  .lado-der {
    display: grid;
    gap: 20px;
  }

  .card {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: 16px;
    background: #0c0f12;
    border-radius: 8px;
    padding: 12px;
    text-decoration: none;
    color: #ccd0d4;
    transition: 0.2s;
  }

  .card:hover {
    background: #162029;
  }

  .card img {
    width: 100%;
    height: 120px;
    object-fit: cover;
    border-radius: 6px;
  }

  .texto h3 {
    margin: 0 0 6px 0;
    font-size: 18px;
  }

  .texto span {
    font-size: 14px;
    opacity: 0.6;
  }

  /* Marco con borde difuminado animado rojo/verde alrededor de la imagen */
  .glow-frame {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 5px; /* mismo radio que la imagen */
    isolation: isolate; /* asegura el stacking correcto */
  }

  .glow-frame > img.glow-image {
    position: relative;
    z-index: 2;
    display: block;
    width: 50px;
    height: 50px;
    border-radius: inherit;
  }

  /* Capa difuminada exterior */
  .glow-frame::before {
    content: "";
    position: absolute;
    inset: -1px; /* un poco más grande para que el brillo "salga" */
    border-radius: inherit;
    background: conic-gradient(
      from 0deg,
      rgba(22, 221, 155, 0.9), /* verde */
      rgba(239, 68, 68, 0.9),  /* rojo */
      rgba(18, 238, 165, 0.9)
    );
    filter: blur(100px);
    animation: spin 6s linear infinite;
    z-index: 0;
    pointer-events: none;
  }

  /* Borde "anillo" nítido con el degradado animado 
  .glow-frame::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 2px; /* grosor del borde */
    background: conic-gradient(
      from 0deg,
      #0b8059, /* verde */
      #c90b0b, /* rojo */
      #055a3e
    );
    animation: spin 6s linear infinite reverse; /* alterna recorrido */
    /* Máscara para dejar solo el anillo del borde visible */
    -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    z-index: 1;
    pointer-events: none;
  }*/

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Animación entrada derecha->izquierda con 'stagger' por --delay */
  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  .slide-in {
    opacity: 0;
    will-change: transform, opacity;
    animation: slideInRight 0.6s ease-out forwards;
    animation-delay: var(--delay, 0s);
  }
</style>
